<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".Activity_htktmd">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/ic_congr"
        />
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="185dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:gravity="center"
            android:text="You have completed the level test."
            android:textSize="32dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Bạn nhận được 10 tim"
            android:textSize="24dp"
            android:gravity="center"
            />


    </LinearLayout>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:src="@drawable/ic_heartview"/>
    <android.widget.Button
        android:id="@+id/btn1"
        android:layout_marginTop="20dp"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:text="OK"
        android:textColor="#ffffff"
        android:background="@drawable/bg_buttonok"
        />



</androidx.appcompat.widget.LinearLayoutCompat>