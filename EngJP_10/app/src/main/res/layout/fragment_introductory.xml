<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fgm_introductory"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical"
    tools:context=".Introductory">

    <!-- Đây là container để chứa các fragment khác -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#C2F8CB"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Unit 1"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Chủ đề gọi món"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/intro_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="100dp"
            android:paddingStart="20dp"
            android:paddingTop="20dp">

            <android.widget.Button
                android:id="@+id/btn_vocab"
                android:layout_width="210dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_radio"
                android:drawableLeft="@drawable/ic_massage"
                android:paddingStart="10dp"
                android:text="Từ vựng"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="5dp"
                android:layout_height="40dp"
                android:layout_marginStart="180dp"
                android:background="@drawable/ic_line" />

            <android.widget.Button
                android:id="@+id/btn_video"
                android:layout_width="210dp"
                android:layout_height="70dp"
                android:layout_marginStart="130dp"
                android:background="@drawable/bg_radio"
                android:drawableLeft="@drawable/ic_btnvideo"
                android:paddingStart="10dp"
                android:text="Video"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="5dp"
                android:layout_height="40dp"
                android:layout_marginStart="230dp"
                android:background="@drawable/ic_line" />

            <android.widget.Button
                android:id="@+id/btn_sample_sententces"
                android:layout_width="210dp"
                android:layout_height="70dp"
                android:layout_marginStart="70dp"
                android:background="@drawable/bg_radio"
                android:drawableLeft="@drawable/ic_btnbook"
                android:paddingStart="10dp"
                android:text="Mẫu câu"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="5dp"
                android:layout_height="40dp"
                android:layout_marginStart="100dp"
                android:background="@drawable/ic_line" />

            <android.widget.Button
                android:id="@+id/btn_listening"
                android:layout_width="210dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/bg_radio"
                android:drawableLeft="@drawable/ic_btntai"
                android:paddingStart="10dp"
                android:text="Luyện nghe"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="5dp"
                android:layout_height="40dp"
                android:layout_marginStart="150dp"
                android:background="@drawable/ic_line" />

            <android.widget.Button
                android:id="@+id/btn_review"
                android:layout_width="210dp"
                android:layout_height="70dp"
                android:layout_marginStart="130dp"
                android:background="@drawable/bg_radio"
                android:drawableLeft="@drawable/ic_btnontap"
                android:paddingStart="10dp"
                android:text="Ôn tập"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </FrameLayout>

    <!-- TODO: Update blank fragment layout -->

</androidx.appcompat.widget.LinearLayoutCompat>