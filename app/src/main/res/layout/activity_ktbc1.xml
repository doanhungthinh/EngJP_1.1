<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activity_ktbc1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="1/10"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="15dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_ktbc_pross">

            <View
                android:layout_width="70dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_ktbc_bluepross" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/imageButtonClose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:background="@color/white"
            android:src="@drawable/baseline_close_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.widget.Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/background_green_boder_nostroke"
            android:text="Test"
            android:textAllCaps="false"
            android:textSize="20dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="30dp"
            android:text="Hẹn gặp sau nhé"
            android:textAlignment="center"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <android.widget.Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/background_gray_border_stroke" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="you later."
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <android.widget.Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/background_white_border_stroke"
                android:text="Call"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/background_white_border_stroke"
                android:text="Catch"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/background_white_border_stroke"
                android:text="Talk"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <android.widget.Button
            android:id="@+id/button4"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/background_gray_border_nonstroke"
            android:text="OK"
            android:textColor="#727273" />

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>