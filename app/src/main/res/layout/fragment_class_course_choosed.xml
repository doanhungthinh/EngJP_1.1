                android:layout_width="375dp"
                android:layout_height="120dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/background_white_border_nostroke"
                android:backgroundTint="#aee4ff"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lession1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lession 1"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        tools:ignore="DuplicateIds" />

                    <TextView
                        android:id="@+id/description1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sample greetings of the day"
                        android:textSize="15dp"
                        tools:ignore="TextSizeCheck" />

                    <ImageView
                        android:id="@+id/imageView21"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/img_heart" />

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="match_parent"
